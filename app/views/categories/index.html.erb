<div class="banner" style="background-image: url('<%= "https://ucarecdn.com/b6be8ae7-1b12-4eb3-bdee-98c1fd77b5f2/-/format/auto/-/preview/3000x3000/-/quality/lighter/"%>')">
  <div>
  <h1>Cookbook</h1>
  <h3>Save your favourite recipes</h3>
  </div>
</div>

<div class="container">
  <div class="info-top">
    <h2>Categories</h2>
    <%= link_to "Add Category", new_category_path, class:"btn btn-warning" %>
  </div>

  <div class="cards">
  <% @categories.each do |category| %>
    <%= link_to category_path(category) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= category.photo.attached? ? cl_image_path(category.photo.key) : "default_image_url_here" %>'); height: 300px;">
        <h2><%= category.name %></h2>
      </div>
    <% end %>
  <% end %>
</div>

</div>
